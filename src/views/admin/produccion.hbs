<main class="main d-flex">
    <div class="container d-flex flex-column">
        <form enctype="multipart/form-data" action="/admin/produccion" method="POST">
            <div class="row h-100">
                <div class="col-12">
                    <div class="card mt-2">
                        <div class="card-header">
                            <h5 class="card-title">Busqueda de peliculas y series</h5>
                        </div>
                        <div class="card-body" id="cuerpo">
                            <i class="feather-lg text-warning mb-2" data-feather="circle"></i>
                            <input class="form-control-no-border h3 edi dropdown-toggle" id="reserva" type="text"
                                placeholder="Reservado a..." data-toggle="tooltip" data-placement="top"
                                data-container="body" title="Haz click para editar reserva" autocomplete="off"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="width: 90%;">
                            <div class="progress progress-sm shadow-sm reditarh" style="display: none;">
                                <div class="progress-bar bg-primary" role="progressbar"
                                    style="height: 20%; width: 100%">
                                </div>
                            </div>
                            <div class="dropdown-menu item" style="width: 100%;">
                                <a class="nombres dropdown-item" style="display: none;"></a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12" id="busqueda" style="display: none;">
                    <div class="card mt-2">
                        <div class="card-header">
                            <h5 class="card-title">Busqueda</h5>
                        </div>
                        <div class="card-body" id="cuerpo">
                            <div class="row" id="carteleras"></div>
                        </div>
                    </div>
                </div>
                <div class="col-12 pelicula" style="display: none;">
                    <div class="row">
                        <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                            <div class="card">
                                <div class="card-header">
                                    <input type="hidden" id="idpelicula" name="id">
                                    <h5 class="card-title">Poster</h5>
                                </div>
                                <div class="card-body">
                                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                                        <ol class="carousel-indicators">
                                            <li data-target="#carouselExampleIndicators" data-slide-to="0"
                                                class="active"></li>
                                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                        </ol>
                                        <div class="carousel-inner">
                                            <div class="carousel-item active">
                                                <img class="d-block w-100 First" src="" alt="First slide">
                                                <input type="hidden" name="imagenes" class="First">
                                            </div>
                                            <div class="carousel-item">
                                                <img class="d-block w-100 Second" src="" alt="Second slide">
                                            </div>
                                            <div class="row__inner ml-4" style="margin-top: 31.5%;">
                                                <div class="tile">
                                                    <div class="tile__media">
                                                        <img class="tile__img img1" src="" alt="" />
                                                        <input type="hidden" name="imagenes" class="img1">
                                                    </div>
                                                </div>
                                                <div class="tile">
                                                    <div class="tile__media">
                                                        <img class="tile__img img2" src="" alt="" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                            <div class="card">
                                <div class="card-header">
                                    <input class="form-control-no-border edi titulo text-center h3" type="text"
                                        name="titulo" placeholder="Titulo..." autocomplete="off" style="width: 100%;">
                                    <input class="form-control-no-border edi text-center slogan" type="text"
                                        name="slogan" placeholder="Slogan..." autocomplete="off"
                                        style="width: 100%; padding: 1px;">
                                </div>
                                <div class="card-body elenco">
                                    <small class="float-right text-navy fh"></small>
                                    <a href="" target="_blank" class="sitio">
                                        <small class="text-info"></small>
                                    </a>
                                    <input class="fh" type="hidden" name="fecha">
                                    <input class="form-control-no-border edi titulo2 h4 text-primary" type="text"
                                        name="titulo" placeholder="Titulo2..." autocomplete="off"
                                        style="width: 100%; padding: 1px;">
                                    <div class="generos"></div>
                                    <textarea id="sinopsis" class="form-control-no-border edi" placeholder="Sinopsis..."
                                        name="sinopsis" rows="5" maxlength="300" style="width: 100%;"></textarea>
                                    <!--<small class="text-navy mt-3">Willy Smit</small>-->
                                    <h5 class="card-title">Elenco</h5>
                                    <div class="row"></div> <small></small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--<div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">-->
                <div class="col-12 pelicula" style="display: none;">
                    <div class="row">
                        <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title">Trailer</h5>
                                </div>
                                <div class="card-body">
                                    <input class="form-control-no-border edi trailer" type="url"
                                        placeholder="Url del trailer..." data-toggle="tooltip" data-placement="top"
                                        data-container="body" title="Url del trailer" autocomplete="off"
                                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                                        style="width: 100%; padding: 1px;" name="trailer" required>
                                    <div class="progress progress-sm shadow-sm reditarh" style="display: none;">
                                        <div class="progress-bar bg-primary" role="progressbar"
                                            style="height: 20%; width: 100%">
                                        </div>
                                    </div>
                                    <div class="" id="playerProduction"></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                            <div class="card border-primary mb-3" style="max-width: 540px;">
                                <div class="card-header">
                                    <h5 class="card-title">Archivo</h5>
                                </div>
                                <div class="row no-gutters">
                                    <div class="col-md-5">
                                        <img src="" class="card-img" alt="...">
                                    </div>
                                    <div class="col-md-7">
                                        <div class="card-body">
                                            <h5 class="card-title">Sube un video</h5>
                                            <div class="m-sm-4">
                                                <div class="form-group">
                                                    <input class="form-control-no-border edi" type="file" name="image"
                                                        id="file1" style="width: 100%;" />
                                                </div>
                                                <div class="form-group">
                                                    <progress id="progressBar" value="0" max="100"></progress>
                                                    <h3 id="status"></h3>
                                                    <p id="loaded_n_total"></p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-footer">
                                            <button type="submit" class="btn btn-lg btn-primary float-right"
                                                style="top: 90%;">Enviar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- <a href="dashboard-default.html" class="btn btn-lg btn-primary">Iniciar sesión</a> -->
                </div>
            </div>
        </form>
    </div>
</main>